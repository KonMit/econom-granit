              span.question__tooltip-text Бордюрный камень 
        .content-mramor__body 
          .content-mramor__product-items 
            .content-mramor__product-item.product-item 
              .product-item__wrapper 
                .product-item__image-box
                  img.product-item__image.product-item__image_p(src="../common/img/blag/bd/bd.jpg", alt="tr-plitka")
                  button.product-item__button.button Оставить заявку
                h5.product-item__title.title.title_h5 Бордюрный камень
          .content-mramor__sample.sample
            .sample__wrapper 
              .sample__list 
                .sample__item 
                  h4.sample__title.title.title_h4 Бордюрный камень
                  .sample__photos
                    .sample__photo-box 
                      img.sample__image(src="../common/img/blag/bd/primer-bd-1.jpeg", alt="primer-bd")
                    .sample__photo-box 
                      img.sample__image(src="../common/img/blag/bd/primer-bd-2.jpeg", alt="primer-bd")
                    .sample__photo-box 
                      img.sample__image(src="../common/img/blag/bd/primer-bd-3.jpeg", alt="primer-bd")
                    .sample__photo-box 
                      img.sample__image(src="../common/img/blag/bd/primer-bd-4.jpeg", alt="primer-bd")
                    .sample__photo-box 
                      img.sample__image(src="../common/img/blag/bd/primer-bd-5.jpeg", alt="primer-bd")
                    .sample__photo-box 
                      img.sample__image(src="../common/img/blag/bd/primer-bd-6.jpeg", alt="primer-bd")
